<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.management.school.controller.StudentController"
            stylesheets="@student.css" styleClass="root-pane">
    
    <top>
        <VBox styleClass="header-section" spacing="20">
            <padding>
                <Insets top="25" right="30" bottom="25" left="30"/>
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="15">
                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" spacing="10">
                    <Label text="Student Management" styleClass="page-title">
                        <font>
                            <Font name="System Bold" size="28"/>
                        </font>
                    </Label>
                    <Label text="Manage your student records" styleClass="page-subtitle">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                </HBox>
                
                <Button fx:id="addButton" text="+ Add Student" onAction="#handleAdd"
                        styleClass="primary-button">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Button>
            </HBox>
            
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-bar">
                <padding>
                    <Insets top="5" bottom="5"/>
                </padding>
                
                <Label text="Filter by:" styleClass="filter-label">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Label>
                
                <VBox spacing="5">
                    <Label text="Grade" styleClass="field-label"/>
                    <ComboBox fx:id="gradeComboBox" promptText="Select Grade"
                              styleClass="filter-combo" prefWidth="120"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Section" styleClass="field-label"/>
                    <ComboBox fx:id="sectionComboBox" promptText="Select Section"
                              styleClass="filter-combo" prefWidth="120"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Admission Year" styleClass="field-label"/>
                    <ComboBox fx:id="yearComboBox" promptText="Select Year"
                              styleClass="filter-combo" prefWidth="140"/>
                </VBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <VBox spacing="5">
                    <Label text="Search" styleClass="field-label"/>
                    <HBox spacing="10">
                        <TextField fx:id="searchField" promptText="Search by name..."
                                   styleClass="search-field" prefWidth="250"/>
                        <Button text="Search" onAction="#handleSearch" styleClass="secondary-button"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox styleClass="table-container">
            <padding>
                <Insets top="0" right="30" bottom="30" left="30"/>
            </padding>
            
            <TableView fx:id="studentTable" VBox.vgrow="ALWAYS" styleClass="student-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60" styleClass="table-column"/>
                    <TableColumn fx:id="rollNumberColumn" text="Roll Number" prefWidth="120" styleClass="table-column"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="180" styleClass="table-column"/>
                    <TableColumn fx:id="gradeColumn" text="Grade-Section" prefWidth="120" styleClass="table-column"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" styleClass="table-column"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="130" styleClass="table-column"/>
                    <TableColumn fx:id="activeColumn" text="Status" prefWidth="90" styleClass="table-column"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" styleClass="table-column"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
</BorderPane>