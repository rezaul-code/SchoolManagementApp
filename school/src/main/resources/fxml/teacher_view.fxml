<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.management.school.controller.TeacherController"
            stylesheets="/css/dashboard.css" styleClass="root-pane">

    <top>
        <VBox styleClass="header-section">
            <padding>
                <Insets top="10" right="30" bottom="10" left="30"/>
            </padding>
            
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-bar">
                
                <VBox spacing="5">
                    <Label text="Search Teacher" styleClass="field-label"/>
                    <HBox spacing="10">
                        <TextField fx:id="searchField" promptText="Search by name..."
                                   styleClass="search-field" prefWidth="250"/>
                        <Button text="Search" onAction="#handleSearch" styleClass="secondary-button"/>
                    </HBox>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Subject" styleClass="field-label"/>
                    <ComboBox fx:id="subjectComboBox" promptText="Select Subject"
                              styleClass="filter-combo" prefWidth="160"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Joining Year" styleClass="field-label"/>
                    <ComboBox fx:id="yearComboBox" promptText="Select Year"
                              styleClass="filter-combo" prefWidth="140"/>
                </VBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <HBox alignment="BOTTOM_CENTER">
                    <Button fx:id="addButton" text="+ Add Teacher" onAction="#handleAdd"
                            styleClass="primary-button">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                        <HBox.margin>
                            <Insets bottom="1.0" />
                        </HBox.margin>
                    </Button>
                </HBox>

            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox styleClass="table-container">
            <padding>
                <Insets top="0" right="30" bottom="30" left="30"/>
            </padding>
            
            <TableView fx:id="teacherTable" VBox.vgrow="ALWAYS" styleClass="student-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60" styleClass="table-column"/>
                    <TableColumn fx:id="employeeIdColumn" text="Employee ID" prefWidth="120" styleClass="table-column"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="180" styleClass="table-column"/>
                    <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="140" styleClass="table-column"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" styleClass="table-column"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="130" styleClass="table-column"/>
                    <TableColumn fx:id="activeColumn" text="Status" prefWidth="90" styleClass="table-column"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" styleClass="table-column"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
</BorderPane>